!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    %meta{:content => "Simon Huerlimann &lt;simon.huerlimann@cyt.ch&gt;", :name => "author"}
    = stylesheet_link_tag 'redmine', 'cyt', 'tabbing', 'invoice', 'accounting', 'cybook', :media => 'all'
    = stylesheet_link_tag 'formtastic', 'formtastic_cyt'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %title
      = "CyBook - #{controller.action_name.capitalize}"
  %body
    #wrapper
      #header
        %div{:style => "float: left"}
        #right-menu
        #main-menu
          %ul
            %li
              = link_to "Abrechnung", :controller => "day", :action => :cash_up
            %li
              = link_to "Neue Buchung", :controller => "bookings", :action => :new
            %li
              = link_to "Balance Sheet", :controller => "balance"
            %li
              = link_to "Profit Sheet", :controller => "profit"
            %li
              = link_to "Konten", accounts_path
            %li
              = link_to "Buchungen", bookings_path
    #sidebar
      = yield :sidebar
    #content
      - if flash[:notice]
        #flash.flash.notice
          = flash[:notice]

      = yield
