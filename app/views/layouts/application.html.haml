!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => "Simon Huerlimann &lt;simon.huerlimann@cyt.ch&gt;", :name => "author"}/

    %link{:rel => "shortcut icon", :href => image_path('favicon.ico')}/

    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    /[if lt IE 7]
      = stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %title
      = "CyBook - #{controller.action_name.capitalize}"
  %body
    #container
      #header
        #logo{:style => 'margin: 14px; float: left;'}
          = image_tag('logo.png')
          %h1{:style => 'display: inline; color: #002B3D'} CyBook
        #main-menu
          %ul
            %li
              = link_to "Abrechnung", new_day_path
            %li
              = link_to "Neue Buchung", new_booking_path
            %li
              = link_to "Balance Sheet", :controller => "balance"
            %li
              = link_to "Profit Sheet", :controller => "profit"
            %li
              = link_to "Konten", accounts_path
            %li
              = link_to "Buchungen", bookings_path

      #content
        - if flash[:notice]
          #flash.flash.notice
            = flash[:notice]
        = yield

      #sidebar
        = yield :sidebar
