%tr[asset]
  %td= link_to asset.title, asset, {'data-href-container' => 'tr'}
  %td= link_to asset.invoice, asset.invoice
  %td= link_to asset.direct_account, asset.direct_account
  %td= asset.state
  %td.currency= asset.amount
  %td.currency= asset.balance
  %td.action-links
    = icon_edit_link_to edit_asset_path(asset)
    = icon_delete_link_to asset, asset_path(asset)
