= semantic_form_for resource do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :title
    = f.input :amount
    = f.input :state, :collection => asset_states_as_collection
    = f.input :remarks
    = f.input :purchase_invoice, :input_html => {:class => 'combobox'}
    = f.input :selling_invoice, :input_html => {:class => 'combobox'}

  = f.buttons do
    = f.commit_button
