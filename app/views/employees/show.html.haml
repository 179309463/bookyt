= contextual_links
.contextual
  = link_to t_model(Note), employee_notes_path(@employee), :class => 'icon icon-index'

%h1= t_title

.form-view
  = render "form"

.contextual
  = link_to t_action('new', Employment), new_employment_path, :remote => true, :class => "icon icon-add"
%h2= t_title :index, Employment

- @employments = @employee.employments
= render 'employments/list'

.contextual
  = link_to t_action('new', Salary), new_salary_path(:salary => {:employee_id => @employee.id}), :remote => true, :class => "icon icon-add"
%h2= t_title :index, Salary

- @salaries = @employee.salaries
= render 'salaries/list'

.contextual
  = link_to t_action('new', ChargeRate), new_employment_path, :remote => true, :class => "icon icon-add"
%h2= t_title :index, ChargeRate

- @charge_rates = @employee.charge_rates.valid.latest + ChargeRate.where("code LIKE 'salary:%'").where(:person_id => nil).valid.latest
= render 'charge_rates/list'

= render 'show_attachments'
