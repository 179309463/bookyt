= semantic_form_for @booking do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :value_date
    = f.input :amount, :input_html => {:size => 12, :style => 'text-align: right'}
    = f.input :title
    = f.input :credit_account
    = f.input :debit_account
    = f.input :comments, :input_html => {:rows => 5}
  = f.buttons do
    = f.commit_button
