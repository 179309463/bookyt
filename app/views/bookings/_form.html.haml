= semantic_form_for @booking do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :code
    = f.input :value_date, :as => :date_field, :input_html => {"data-autofocus" => true}
    = f.input :title
    = f.input :amount, :input_html => {:size => 12}
    = f.input :credit_account, :as => :combobox, :collection => Account.all.collect{|account| ["%s - %s" % [account.code, account.title], account.id]}
    = f.input :debit_account, :as => :combobox, :collection => Account.all.collect{|account| ["%s - %s" % [account.code, account.title], account.id]}
    = f.input :reference_type, :as => :select, :collection => reference_types_as_collection
    = f.input :reference_id, :as => :string
    = f.input :comments, :input_html => {:rows => 5}
  = f.buttons do
    = f.commit_button
