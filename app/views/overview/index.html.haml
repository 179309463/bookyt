- cache [:overview_index, current_user.try(:locale)] do
  // Sets the class of #content-column
  - content_for :class_content_column do
    hole-width

  - content_for :class_sidebar_column do
    display-none

  - content_for :page_title do
    = t('bookyt.overview.title')

  = boot_page_title 'bookyt.overview.title'

  = render_navigation(:context => 'main', :expand_all => true, :renderer => SimpleNavigation::Renderer::Overview)
