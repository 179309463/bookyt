- booking = instance_variable_get("@#{vat_booking.to_s}")
= simple_fields_for vat_booking, booking do |v|
  .row-fluid
    .span6
      = v.input :amount, :as => :string, :label => booking.comments, :required => false
      = v.input :title, :as => :hidden, :required => false
      = v.input :comments, :as => :hidden, :required => false
    .span6
      = v.association :credit_account, :collection => accounts_as_collection(Account.find_all_by_code(['1170', '1171'])), :as => :combobox, :label => t('expenses.labels.vat_account')
