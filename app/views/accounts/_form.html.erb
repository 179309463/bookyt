<%= semantic_form_for @account do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :number, :input_html => {:size => 6} %>
    <%= f.input :title %>
    <%= f.input :account_type %>
    <%= f.input :client %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
