= semantic_form_for @invoice do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :customer, :as => :combobox
    = f.input :company, :as => :combobox
    = f.input :title
    = f.input :amount
    = f.input :due_date, :as => :date_field
    = f.input :state, :collection => invoice_states_as_collection
    = f.input :remarks

  = f.buttons do
    = f.commit_button
