%tr{:id => "client_#{client.id}"}
  %td= client.name
  %td.action-links
    = link_to image_tag('16x16/edit.png', :title => 'Edit'), edit_client_path(client), :method => :get
    = link_to image_tag('16x16/remove.png', :title => 'Destroy'), client_path(client), :remote => true, :method => :delete, :confirm => t_confirm_delete(client)
