= boot_page_title

.tabbable
  %ul.nav.nav-tabs
    %li.active= link_to "Kontakte (#{@people.count})", '#contacts-tab', {:data => {:toggle => 'tab'}}
    %li= link_to "Rechnungen (#{@invoices.count})", '#invoices-tab', {:data => {:toggle => 'tab'}}

.tab-content
  #contacts-tab.active= render 'list', :records => @people
  #invoices-tab= render 'invoices/list', :collection => @invoices
