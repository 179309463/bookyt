<h1>Abrechnung vom <%=h @day.date.strftime "%d.%m.%Y" %></h1>
<%= form_for :cash_register, @register, :action => 'calculate_cash' do |f| %>
<table>
	<tr>
		<td style="vertical-align: top">
			<table>
				<% for i in [ 200, 100, 50, 20, 10 ] %>
				<tr>
					<th style="text-align: right"><%=h i %> x </th>
					<td><%= f.text_field i, :size => 4, :style => "text-align: right" %></td>
				</tr>
				<% end %>
			</table>
		</td>
		<td style="vertical-align: top">
			<table>
				<% for i in [ 5, 2, 1, 0.5, 0.2, 0.1, 0.05 ] %>
				<tr>
					<th style="text-align: right"><%=h i %> = </th>
					<td><%= f.text_field i, :size => 4, :style => "text-align: right" %></td>
				</tr>
				<% end %>
				<tr>
					<th>Total:</th>
					<td id="cash"></td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td colspan="4"><%= submit_tag 'Ausrechnen' %></td>
	</tr>
</table>
<% end %>

<% form_for :day, @day, :url => { :action => 'update', :id => @day } do |f| %>
<table>
	<tr>
		<th>Datum</th>
		<td><%= f.text_field 'date', :label => 'Datum', :size => 10, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th>Bruttoumsatz</th>
		<td><%= f.text_field 'product_count', :label => 'Bruttoumsatz', :size => 4, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th/>
		<td><%= f.text_field 'gross_turnover', :label => 'Bruttoumsatz', :size => 6, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th>Nettoumsatz</th>
		<td><%= f.text_field 'client_count', :label => 'Nettoumsatz', :size => 4, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th/>
		<td><%= f.text_field 'net_turnover', :label => 'Nettoumsatz', :size => 6, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th>Bar-Soll</th>
		<td><%= f.text_field 'cash', :label => 'Bar-Soll', :size => 6, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th>Ausgabe</th>
		<td><%= f.text_field 'expenses', :label => 'Ausgabe', :size => 6, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th>EFT/Karte</th>
		<td><%= f.text_field 'card_turnover', :label => 'Bar-Soll', :size => 6, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<th>Kredit</th>
		<td><%= f.text_field 'credit_turnover', :label => 'Kreditumsatz', :size => 6, :style => "text-align: right" %></td>
	</tr>
	<tr>
		<td colspan="2"><%= submit_tag 'Abschliessen' %></td>
	</tr>
</table>
<% end %>
