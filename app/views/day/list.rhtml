<table class="listing">
  <tr>
    <th>Datum</th>
    <th>Bar</th>
    <th>Karte</th>
    <th>Soll</th>
    <th>Kasse</th>
    <th>Differenz</th>
    <th>Trinkgeld</th>
  </tr>

  <% for day in @days %>
  <tr>
    <td><%=h day.date %></td>
    <td><%=h day.cash %></td>
    <td><%=h day.card_turnover %></td>
    <td><%=h day.cash + day.card_turnover %></td>
    <td><%=h day.cash + day.card_turnover %></td>
    <td><%=h "" %></td>
    <td><%=h "" %></td>
    <td>
      <%= link_to(image_tag('remove.png'), :action => 'remove', :id => day) %>
      <%= link_to(image_tag('edit.png'), :action => 'cash_up', :id => day) %>
    </td>
  </tr>
  <% end %>
</table>
