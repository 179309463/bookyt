- @direct_bookings ||= Booking.by_reference(reference)
- unless @direct_bookings.empty?
  - @direct_account  ||= @direct_bookings.first.credit_account
  - @direct_balance  ||= @direct_bookings.direct_balance(@direct_account)

  %table.list
    = render :partial => 'direct_bookings/item', :collection => @direct_bookings
    = render 'direct_bookings/list_footer'
