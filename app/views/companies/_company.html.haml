%tr[company]
  %td= link_to company.vcard.try(:full_name), company, {'data-href-container' => 'tr'}
  %td.action-links
    = link_to image_tag('16x16/edit.png', :title => 'Edit'), edit_company_path(company), :method => :get
    = link_to image_tag('16x16/remove.png', :title => 'Destroy'), company_path(company), :remote => true, :method => :delete, :confirm => t_confirm_delete(company)
